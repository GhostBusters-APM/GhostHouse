<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.fragments.UserFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@android:color/transparent"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/imageView"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="20dp"
                        android:layout_marginHorizontal="125dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"

                        android:src="@drawable/img"
                        app:civ_border_color="@color/colorMenuDark"
                        app:civ_border_width="2dp"
                        app:srcCompat="@drawable/ic_person_black_50dp" />
                    <!--<ImageView-->
                    <!--android:id="@+id/imageView_OLD"-->
                    <!--android:layout_width="120dp"-->
                    <!--android:layout_height="120dp"-->
                    <!--android:layout_gravity="center_horizontal"-->
                    <!--android:layout_marginHorizontal="125dp"-->
                    <!--android:layout_marginTop="20dp"-->
                    <!--android:layout_weight="1"-->
                    <!--android:background="@drawable/img"-->
                    <!--android:backgroundTint="@color/colorGray"-->
                    <!--android:maxHeight="140dp"-->

                    <!--android:maxWidth="140dp"-->
                    <!--android:minHeight="130dp"-->
                    <!--android:minWidth="130dp"-->
                    <!--android:scaleType="fitEnd"-->
                    <!--app:srcCompat="@drawable/ic_person_black_50dp" />-->

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:gravity="top|center_horizontal"
                        android:text="Personal Data"
                        android:textAlignment="center"
                        android:textColor="@color/text"
                        android:textSize="22dp" />

                    <TextView
                        android:id="@+id/textViewEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:gravity="top|center_horizontal"
                        android:text="Personal Data"
                        android:textAlignment="center"
                        android:textColor="@color/text"
                        android:textSize="22dp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="#AAAAAAAA" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">

                    <Switch
                        android:id="@+id/switch1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="50dp"
                        android:paddingVertical="8dp"
                        android:text="Night Mode"
                        android:textColor="@color/text"
                        android:textSize="18dp"
                        android:thumbTint="@color/colorPrimary"
                        android:trackTint="@color/colorPrimary" />

                </LinearLayout>

                <Button
                    android:id="@+id/buttonLogOut"
                    android:layout_width="169dp"
                    android:layout_height="37dp"
                    android:layout_gravity="fill_vertical|center_horizontal"
                    android:layout_margin="50dp"
                    android:background="@drawable/my_button"
                    android:backgroundTint="@color/colorRed"
                    android:text="Log out"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>
