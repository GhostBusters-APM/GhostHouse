<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F6"
    tools:context=".home.fragments.DataFragment">




        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:spinnerMode="dropdown"
                    />


                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="278dp"
                    android:layout_below="@+id/linetext"
                    android:layout_margin="5dp"
                    android:title="Graph Title" />

                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/barChart"
                    android:layout_width="match_parent"
                    android:layout_height="278dp"
                    android:layout_below="@+id/linetext"
                    android:layout_margin="5dp"
                    android:title="Graph Title" />

                <TextView
                    android:id="@+id/textViewMax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="2037 kw"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Six month consumption"
                    android:textColor="@color/text"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textViewMin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="2037 kw"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Last year mean consumption"
                    android:textColor="@color/text"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textViewMedia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="2037 kw"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:text="Last year mean consumption"
                    android:textColor="@color/text"
                    android:textSize="24sp" />

            </LinearLayout>
        </ScrollView>

</android.support.constraint.ConstraintLayout>